<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="Esci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but_map_exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/spin_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spin_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/spin_floor"
        android:layout_alignLeft="@+id/spin_floor"
        android:layout_alignStart="@+id/spin_floor" />

    <ImageView android:id="@+id/map_image"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:visibility="invisible"
        android:layout_width="match_parent">
    </ImageView>

    <Button
        android:text="Cerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin_room"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/but_map_search" />

</RelativeLayout>